<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/comedy"
            style="@style/GenreStyle"
            android:src="@drawable/comedy_2"
            android:background="@color/genre_comedy"/>

        <ImageView
            android:id="@+id/drama"
            style="@style/GenreStyle"
            android:src="@drawable/drama_2"
            android:background="@color/genre_drama"/>

        <ImageView
            android:id="@+id/horror"
            style="@style/GenreStyle"
            android:src="@drawable/horror_2"
            android:background="@color/genre_horror"/>

        <ImageView
            android:id="@+id/thriller"
            style="@style/GenreStyle"
            android:src="@drawable/thriller_2"
            android:background="@color/genre_thriller"/>

        <ImageView
            android:id="@+id/search"
            style="@style/GenreStyle"
            android:src="@drawable/search"
            android:background="@color/search"/>

    </LinearLayout>
</ScrollView>